Termux-Connect() {
  if [ $# -lt 1 ]; then
    echo "Usage: Termux-Connect <port1> [port2] ..."
    return 1
  fi

  local ports=("$@") # semua port sebagai array
  local cmd="termux-ssh ${ports[*]}"

  if tmux has-session -t Termux 2>/dev/null; then
    echo "Session 'Termux' already exists. Attaching..."
    tmux attach -t Termux
  else
    echo "Creating new tmux session 'Termux' with command: $cmd"

    # Buat sesi dengan shell default
    tmux new-session -d -s Termux

    # Kirim perintah ke sesi
    tmux send-keys -t Termux "$cmd" C-m
update-alternatives --config x-terminal-emulator
    # Attach ke sesi
    tmux attach -t Termux
  fi
}



MusicPlaylist() {
  if [ -z "$1" ]; then
    echo "Usage: MusicPlaylist <path-to-playlist.m3u> [notitle]"
  elif [ "$2" = "notitle" ]; then
    mpv --vf=scale=640:360 --loop-playlist "$1"
  else
    mpv --title=MusicPlaylist --vf=scale=640:360 --loop-playlist --no-osc --osd-level=0 "$1"
  fi
}

Music-Play() {
  # Cek jika argumen kosong
  if [ -z "$1" ]; then
    echo "Usage: Music-Play <playlist_file>"
    return 1
  fi

  local playlist="$1"

  # Buat sesi tmux di background
  tmux new-session -d -s Music

  # Kirim perintah ke pane pertama (default 0)
  tmux send-keys -t Music "MusicPlaylist $playlist" C-m

  # Attach ke sesi Music
  tmux attach -t Music
}



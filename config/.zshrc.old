termux-ssh() {
  local ip
  ip=$(ip route | grep default | awk '{print $3}')

  local ssh_port=$1
  shift

  # Kalau SSH port tidak diisi, minta input
  if [ -z "$ssh_port" ]; then
    read -p "Masukkan port SSH: " ssh_port
  fi

  # Kumpulan port tambahan dari parameter sisanya
  local extra_ports=("$@")

  # Kalau tidak ada port tambahan dari argumen, minta manual (boleh kosong)
  if [ ${#extra_ports[@]} -eq 0 ]; then
    read -p "Masukkan port tambahan (pisahkan dengan spasi, boleh kosong): " -a extra_ports
  fi

  # Bangun opsi forwarding -L, mulai dari port SSH juga
  local forwards=("-L" "${ssh_port}:127.0.0.1:${ssh_port}")
  for port in "${extra_ports[@]}"; do
    if [ -n "$port" ]; then
      forwards+=("-L" "${port}:127.0.0.1:${port}")
    fi
  done

  # Jalankan SSH dengan semua forwarding
  ssh "${forwards[@]}" termux@"$ip" -p "$ssh_port"
}

